<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/nameTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" The dead will not hurt "
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:backgroundTint="#FFF0F5"
                    android:id="@+id/member1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:id="@+id/member_name"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/niyaz_khabibulin"
                                android:textSize="@dimen/text_size"
                                android:layout_gravity="center"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                />
                            <TextView
                                android:id="@+id/member_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/unhollydk"
                                android:textAppearance="?attr/textAppearanceBody2"
                                />
                            <TextView
                                android:id="@+id/is_leader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center"
                                android:text=" leader "
                                android:background="#B00020"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="4dp"/>

                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:backgroundTint="#FFF0F5"
                    android:id="@+id/member2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:id="@+id/member_name2"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/niyaz_khabibulin"
                                android:textSize="@dimen/text_size"
                                android:layout_gravity="center"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                />
                            <TextView
                                android:id="@+id/member_username2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/unhollydk"
                                android:textAppearance="?attr/textAppearanceBody2"
                                />
                            <TextView
                                android:id="@+id/is_leader2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center"
                                android:text=" leader "
                                android:background="#B00020"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="4dp"/>

                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:backgroundTint="#FFF0F5"
                    android:id="@+id/member3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:id="@+id/member_name3"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/niyaz_khabibulin"
                                android:textSize="@dimen/text_size"
                                android:layout_gravity="center"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                />
                            <TextView
                                android:id="@+id/member_username3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/unhollydk"
                                android:textAppearance="?attr/textAppearanceBody2"
                                />
                            <TextView
                                android:id="@+id/is_leader3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center"
                                android:text=" leader "
                                android:background="#B00020"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="4dp"/>

                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/delete"
                    android:backgroundTint="@color/cool_red"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:backgroundTint="#03DAC6"
                    />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>